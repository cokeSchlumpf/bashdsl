package com.wellnr.generator

import java.util.Iterator

class StringUtil {
	
	def comment(String s) {
		s.split("\n").map[line|'''# «line»''']
	}
	
	def mkString(Iterator<String> strings) {
		strings.fold("") [ seed, string |
			var result = seed;
			
			if (seed.length > 0) {
				result = result + "\n"	
			}
			
			result + string
		]
	}
	
}