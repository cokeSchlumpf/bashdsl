	private def String doGenerate(Script script) {
		'''
		#!/bin/bash
		#
		# (c) «script.copyright»
		#
		# «script.description»
		#
		# Usage:
		#
		# 	«script.name» [ -h | --help | OPTIONS ]
		#
		# Options:
		#
		#	
		'''
	}
	
	private def String doGenerateHelp(Arguments args) {
		'''
		«FOR arg : args.items»
			«doGenerateHelp(args)»
		«ENDFOR»
		'''
	}
	
	private def String doGenerateHelp(Argument arg) {
		if (arg.description instanceof)
		'''
		«arg.name»
			«doGenerateHelp(arg.description)»
		'''
	}
	
	private def String doGenerateHelp(ArgumentDescription desc) {
		if (desc instanceof SimpleArgumentDescription) {
			doGenerateHelp(desc)
		} else if (desc instanceof DetailedArgumentDescription) {
			doGenerateHelp(desc);
		} else {
			''''''
		}
	}
	
	private def String doGenerateHelp(SimpleArgumentDescription desc) {
		'''
		Required.
		«desc.description»
		'''
	}
	
	private def String doGenerateHelp(DetailedArgumentDescription desc) {
		'''
		«IF desc.required == 'true'»Required«ENDIF».«IF desc.^default != null» Default: «desc.^default»«ENDIF»
		«desc.description»
		'''
	}
