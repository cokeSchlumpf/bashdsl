grammar com.wellnr.BashDSL with org.eclipse.xtext.common.Terminals

generate bashDSL "http://www.wellnr.com/BashDSL"

Domainmodel:
  (elements += AbstractElement)*
;
 
PackageDeclaration:
  'scripts' name = ID(description = STRING (',' copyright = STRING)?) '{'
    (arguments += Argument)*
  '}'
;

Argument:
	(optional ?= 'optional')? 'argument' name = STRING ('default' default = STRING)? 
;
