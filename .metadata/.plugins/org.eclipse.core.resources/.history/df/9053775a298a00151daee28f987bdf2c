grammar com.wellnr.BashL with org.eclipse.xtext.common.Terminals

generate bashL "http://www.wellnr.com/BashL"

Script:
	'script' name = ID '{'
		copyright = Copyright
		description = Description
		arguments = Arguments
		code = Code
	'}'
;

Copyright:
	'copyright' ':' value = STRING
;

Description:
	'description' ':' value = STRING
;

Default:
	'default' ':' value = STRING
;

Required:
	'required' ':' value = BOOL
;

Code:
	'code' ':' value = CODE_BLOCK
;

Arguments:
	'arguments {'
		items += Argument (','
		items += Argument)?
	'}'
;

Argument: 
	'argument' name=ID '{' description = ArgumentDescription '}'
;

ArgumentDescription:
	SimpleArgumentDescription | DetailedArgumentDescription
;

SimpleArgumentDescription:
	description=STRING
;

DetailedArgumentDescription:
	description = Description
	(default = Default)?
	(required = Required)?
;

terminal CODE_BLOCK:
	'{' -> '}'
;

terminal BOOL:
	'true' | 'false'
;