grammar com.wellnr.BashL with org.eclipse.xtext.common.Terminals

generate bashL "http://www.wellnr.com/BashL"

Script:
	'{'
		'"name"' ':' name = STRING (','
		'"copyright"' ':' copyright = STRING)? (','
		'"description"' ':' description = STRING)? (','
		'"arguments"' ':' arguments = Arguments)? (','
		'"main"' ':' code = CODE_BLOCK)?
	'}'
;

Arguments:
	'{'
		items += Argument (','
		items += Argument)?
	'}'
;

Argument: 
	name=STRING ':' description = ArgumentDescription
;

ArgumentDescription:
	SimpleArgumentDescription | DetailedArgumentDescription
;

SimpleArgumentDescription:
	description=STRING
;

DetailedArgumentDescription:
	'{'
		'"description"' ':' description = STRING (','
		'"default"' ':' default = STRING)? (','
		'"required"' ':' required = BOOL)?
	'}'
;

terminal CODE_BLOCK:
	'{' -> '}'
;

terminal BOOL:
	'true' | 'false'
;